# Should we be "no-op" command?
test -n "$EIMG_WAITED" && $EIMG_WAITED && exit 0

ip=192.168.122.100
mac_address=52:54:00:AA:00:01
image="$1"

dir=$(mktemp -d "/tmp/$(id -n -u)-eimg-XXXXXX")
test -z "$dir" && exit 1
echo "using $dir"

virt-builder --get-kernel "$image" --output "$dir"

qemu-kvm \
    -m 1024 \
    -drive file="$image",if=virtio \
    -drive file="$HOME/.config/eimg/basic.img",if=virtio \
    -kernel "$dir"/vmlinuz-* \
    -initrd "$dir"/initramfs-* \
    -append 'root=/dev/vda1 ro ds=nocloud-net' \
    -net nic,macaddr=$mac_address,model=virtio \
    -net bridge,br=virbr0 \
    &


cat <<EOF

 ! Make sure you have properly configured your libvirt's DHCP so that
 ! the mac address $mac_address gets the right ip=$ip.

EOF

# TODO: Document how to setup this.
@bindir@/wait-for-ssh root@$ip

rm -rf "$dir"
