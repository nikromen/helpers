. "@eimgdatadir@"/lib

eimg_pkg_manager
pkgmanager=$eimg_pkg_manager_result

@bindir@/eimg-wait "$@"
@insecure_ssh@ root@@pi_exp_host@ "$pkgmanager update -y --setopt=tsflags=nodocs --setopt=deltarpm=0 $eimg_pkgupdate_options"

# same as in fedora-kickstarts, we remove linux-firmware which is brought-in
# with updated kernel-core
@insecure_ssh@ root@@pi_exp_host@ "rpm -e linux-firmware"

ansible_hack_packages='
  libselinux-python
'

case $eimg_ansible_fix in
  # Fix Ansible issues by default.  That's what we want most of the time.
  yes|"")
    # Hack for f22+, used to work-around problems with ansible
    @insecure_ssh@ root@@pi_exp_host@ \
        "$pkgmanager install -y --setopt=tsflags=nodocs" $ansible_hack_packages
    ;;
esac


@libexecdir@/eimg-stop "$@"
