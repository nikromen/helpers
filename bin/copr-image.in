    && @bindir@/eimg-wait "$@" \
    && EIMG_WAITED=: @bindir@/eimg-update "$1" \
    && EIMG_WAITED=: @bindir@/eimg-libvirt-guest "$1" \
    && EIMG_WAITED=: @bindir@/eimg-cleanup-online "$1" \
    && @libexecdir@/eimg-stop "$1" \
    && virt-sysprep -a "$1" --root-password disabled \
    && @bindir@/eimg-minimize "$1"
